                    className={`block w-full pl-10 pr-3 py-2 border ${errors['partnerContactPerson.name'] ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm`}
